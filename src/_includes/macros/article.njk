{% macro article(body, title, date, url="") %}
  <article>
    <header>
      {% if url === "" %}
        <h1>{{ title }}</h1>
      {% else %}
        <h1>
          <a href=" {{url}} ">{{ title }}</a>
        </h1>
      {% endif %}
      <time dateTime="{{ date.toISOString() }}">
        {{ date.getMonth() + 1 }}/{{ date.getDate() }}/{{ date.getFullYear() }}
      </time>
    </header>

    <main>
      {{ body | safe }}
    </main>
  </article>
{% endmacro %}